{% extends 'base.html.twig' %}

{% block title %}Reseñas{% endblock %}

{% block body %}
    <div style="background: linear-gradient(#87CEEB, #fff); min-height: 100vh;">
        <nav class="navbar navbar-expand-lg py-1" style="background-color: #f0f9ff;">
            <div class="container-fluid d-flex align-items-center px-3">
                <img
                    src="{{ asset('images/tituloArriba.png') }}"
                    alt="The Simpsons"
                    class="me-auto mx-2 my-1"
                    style="max-height: 45px;"
                >
            </div>
        </nav>

        <div class="container py-4">
            <div class="card shadow-lg mb-4 border-0 position-relative" style="border-radius:25px;">
                <div class="position-absolute top-0 end-0 m-3">
                    {% if averageStars > 0 %}
                        <div class="bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center shadow"
                             style="width:70px; height:70px;">
                            <span class="fw-bold fs-4">
                                {{ averageStars|number_format(1, '.', '') }}/5
                            </span>
                        </div>
                    {% else %}
                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center shadow text-center"
                             style="width:70px; height:70px; line-height:1;">
                            <small class="fw-bold">Sin<br>nota</small>
                        </div>
                    {% endif %}
                </div>

                <div class="row g-0 align-items-center">
                    <div class="col-md-4 d-flex justify-content-center align-items-center p-4">
                        <img src="https://cdn.thesimpsonsapi.com/500{{ character.portraitPath }}"
                             class="img-fluid rounded"
                             alt="{{ character.name }}"
                             style="max-height:340px; object-fit:contain;">
                    </div>

                    <div class="col-md-8">
                        <div class="card-body py-4 pe-4">
                            <h1 class="fw-bold text-primary mb-2">
                                {{ character.name }}
                            </h1>
                            <p class="text-muted fs-4 mb-2">
                                {{ character.occupation }}
                            </p>
                            <span class="badge bg-warning text-dark fs-6 mb-3">{{ character.status }}</span>

                            <div class="card shadow border-0 mt-3 mb-2" style="border-radius:20px;">
                                <div class="card-body py-3">
                                    <h4 class="fw-bold mb-3 text-dark">Frases míticas</h4>

                                    {% set phrases = character.phrases|slice(0,5) %}

                                    {% if phrases|length > 0 %}
                                        <ul class="list-group list-group-flush">
                                            {% for phrase in phrases %}
                                                <li class="list-group-item fs-5 py-2">
                                                    “{{ phrase.phrase }}”
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        <p class="text-muted mb-0">
                                            Este personaje aún no tiene frases guardadas.
                                        </p>
                                    {% endif %}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow border-0 mb-4" style="border-radius:25px;">
                <div class="card-body p-4">
                    <h4 class="mb-3 fw-bold text-dark">Escribe tu reseña</h4>

                    <form method="post" action="{{ path('app_review', { id: character.id }) }}">
                        <input type="hidden" name="character_id" value="{{ character.id }}">

                        <div class="mb-3">
                            <label class="form-label fw-semibold fs-5">Puntuación</label>
                            <div id="stars" class="fs-1 text-warning">
                                {% for i in 1..5 %}
                                    <span class="star" data-value="{{ i }}" style="cursor:pointer;">☆</span>
                                {% endfor %}
                            </div>
                            <input type="hidden" name="stars" id="starsInput">
                        </div>

                        <div class="mb-3">
                            <textarea name="comment"
                                      class="form-control"
                                      rows="4"
                                      placeholder="¿Qué opinas de este personaje?"
                                      required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary fw-bold px-4 py-2">
                            Enviar reseña
                        </button>
                    </form>
                </div>
            </div>

            <h4 class="fw-bold mb-3">Comentarios de otros fans</h4>
            {% for review in character.reviews %}
                <div class="card mb-3 shadow-sm border-0" style="border-radius:18px;">
                    <div class="card-body p-3">

                        <div class="mb-2 text-warning fs-4">
                            {% for i in 1..5 %}
                                {% if i <= review.stars %}
                                    ★
                                {% else %}
                                    ☆
                                {% endif %}
                            {% endfor %}
                        </div>

                        <p class="mb-1 fs-5">{{ review.comment }}</p>

                        <small class="text-muted">
                            Por {{ review.user.username }}
                        </small>
                    </div>
                </div>
            {% else %}
                <p class="text-muted">Todavía no hay reseñas. ¡Sé el primero!</p>
            {% endfor %}

        </div>
    </div>

    <script>
        const stars = document.querySelectorAll('.star');
        const input = document.getElementById('starsInput');

        stars.forEach(star => {
            star.addEventListener('click', () => {
                const value = star.dataset.value;
                input.value = value;

                stars.forEach(s => {
                    s.textContent = s.dataset.value <= value ? '★' : '☆';
                });
            });
        });
    </script>
{% endblock %}
