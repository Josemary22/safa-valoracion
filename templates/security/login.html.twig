{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            background-color: #f0f9ff;
            overflow-x: hidden;
        }
    </style>

    <div class="container min-vh-100 d-flex flex-column align-items-center pt-5">
        <div class="text-center mb-4">
            <img
                src="{{ asset('images/imagenLogin.png') }}"
                alt="Bienvenido a Springfield"
                class="img-fluid"
                style="max-height: 500px;"
            >
        </div>

        <div class="col-12 col-sm-10 col-md-6 col-lg-5">
            <div class="card shadow-sm border border-dark position-relative" style="z-index: 2;">
                <div class="card-body p-4">

                    <h2 class="text-center mb-4">Iniciar sesi칩n</h2>

                    <form method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Email</label>
                            <input
                                type="email"
                                value="{{ last_username }}"
                                name="_username"
                                id="username"
                                class="form-control"
                                placeholder="Introduce tu email"
                                autocomplete="email"
                                required
                                autofocus
                            >
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">Contrase침a</label>
                            <input
                                type="password"
                                name="_password"
                                id="password"
                                class="form-control"
                                placeholder="Introduce tu contrase침a"
                                autocomplete="current-password"
                                required
                            >
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Iniciar sesi칩n
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <img
            src="{{ asset('images/simpsonLogin.png') }}"
            alt="Homero Simpson"
            class="img-fluid mt-auto d-none d-md-block"
            style="
            max-height: 30vh;
            z-index: 0;
            pointer-events: none;"
        >
    </div>
{% endblock %}
